#!/usr/bin/env bash

ping_func(){
    results=$(ping -c 1 -t 1 google.co.uk >/dev/null 2>/dev/null)
    return $?
}

check_net() {
  networksetup -setairportpower en0 off
  ping_func
  if [[ $? > 0 ]]; then
    sleep 3
    check_net
  else
    echo "internet connection is ok 👍"
  fi
}

while :
do
  check_net
  if [[ $1 != 'forever' ]]; then
    exit 0
  fi
  sleep 5
done
